# Lines configured by zsh-newuser-install
HISTFILE=~/.histfile
HISTSIZE=10000
SAVEHIST=10000
setopt appendhistory autocd
bindkey -v
# End of lines configured by zsh-newuser-install

# Enables the '#' char to do comments on the command line
setopt interactivecomments

# Enable history search
bindkey '^R' history-incremental-search-backward

# source zsh-z, see https://github.com/agkozak/zsh-z#installation
source ~/Documents/config/zsh-z/zsh-z.plugin.zsh
zstyle ':completion:*' menu select

# The following lines were added by compinstall
zstyle :compinstall filename '/Users/chris/.zshrc'

autoload -Uz compinit && compinit
# End of lines added by compinstall

# Enable colors on autocomplete
zstyle ':completion:*' list-colors 'exfxcxdxbxegedabagacad'

# Enable ls colors
export CLICOLOR=1
export LSCOLORS=exfxcxdxbxegedabagacad

# will be done by 'minimal'
# autoload -U colors
